<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mapper.ChatMessageMapper">

    <resultMap id="BaseResultMap" type="com.example.bean.ChatMessage">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
    </resultMap>

    <select id="Select" resultType="com.example.bean.ChatMessage">
        select * from chatmessage where userID = #{userID},otherID=#{otherID}
    </select>

    <insert id="Insert" parameterType="com.example.bean.ChatMessage">
        insert into chatmessage(userID,otherID,otherAvatarUrl,contentType,content)
        values(#{userID},#{otherID},#{otherAvatarUrl},#{contentType},#{content})
    </insert>

    <update id="Update" parameterType="com.example.bean.ChatMessage">
        update chatmessage
        set userID=#{userID},otherID=#{otherID},otherAvatarUrl=#{otherAvatarUrl},contentType=#{contentType},content=#{content}
        where ID=#{ID}
    </update>

</mapper>